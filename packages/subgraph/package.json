{
  "name": "@useolive/subgraph",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "auth": "graph auth $DEPLOY_KEY",
    "codegen": "graph codegen",
    "build:arbitrum-one": "bun run prepare:arbitrum-one && graph build",
    "build:base": "bun run prepare:base && graph build",
    "prepare:arbitrum-one": "ts-node bin/build-subgraph.ts arbitrum-one && bun run codegen",
    "prepare:base": "ts-node bin/build-subgraph.ts base && bun run codegen",
    "deploy:arbitrum-one": "bun run prepare:arbitrum-one && graph deploy olive-on-arbitrum-one",
    "deploy:base": "bun run prepare:base && graph deploy olive-on-base",
    "create-local": "graph create --node http://localhost:8020/ moojok/olive",
    "remove-local": "graph remove --node http://localhost:8020/ moojok/olive",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 moojok/olive",
    "test": "echo 'No tests yet, implement them'",
    "lint": "bun x prettier --check . --ignore-path ../../.prettierignore",
    "format": "bun x prettier --write . --ignore-path ../../.prettierignore"
  },
  "dependencies": {
    "@useolive/sdk": "workspace:^"
  },
  "devDependencies": {
    "@graphprotocol/graph-cli": "0.97.1",
    "@graphprotocol/graph-ts": "0.38.1",
    "@types/node": "^22.15.21",
    "ts-node": "^10.8.2",
    "yaml": "^2.2.1"
  }
}
