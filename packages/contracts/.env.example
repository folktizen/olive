# .env.example for packages/contracts
#
# Copy this file to .env and fill in your secrets and API keys.
#
# This file is required for Foundry and contract deployment scripts.
#
# See foundry.toml for how these variables are used.

# === Private Key ===
# Used for contract deployment and signing transactions
PRIVATE_KEY="<your_private_key>"

# === Etherscan API Keys ===
# Used for contract verification on block explorers
OPTIMISTIC_API_KEY="<your_optimistic_etherscan_api_key>"
POLYSCAN_API_KEY="<your_polygonscan_api_key>"
BASESCAN_API_KEY="<your_basescan_api_key>"

# === Etherscan API URLs ===
# Default API endpoints for each network's block explorer
OPTIMISTIC_API_URL="https://api-optimistic.etherscan.io/api"
POLYSCAN_API_URL="https://api.polygonscan.com/api"
BASESCAN_API_URL="https://api.basescan.org/api"

# === RPC URLs ===
# RPC endpoints for each supported network
OPTIMISTIC_RPC_URL="<your_optimism_rpc_url>"
POLYGON_RPC_URL="<your_polygon_rpc_url>"
BASE_RPC_URL="<your_base_rpc_url>"
