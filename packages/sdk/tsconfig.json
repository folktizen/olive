{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "exclude": [
    "node_modules",
    "dist",
    "./src/**/*.test.ts"
  ],
  "include": [
    "./src/**/*.ts"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "lib": [
      "ES2015"
    ],
    "target": "ES2015",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "paths": {
      "tslib": [
        "./node_modules/tslib/"
      ]
    }
  }
}
